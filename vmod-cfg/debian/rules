#!/usr/bin/make -f

# taken from https://salsa.debian.org/md/varnish-vmod-digest/-/blob/master/debian/rules

#export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DH_VERBOSE=1
#include /usr/share/dpkg/buildflags.mk

#D := $(CURDIR)/debian/vmod-cfg

# for aclocal
#export LIBVARNISHAPI_DATAROOTDIR = $(shell pkg-config --variable=datarootdir varnishapi)

override_dh_gencontrol:
	if [ -n "$$DEBIAN_OVERRIDE_BINARY_VERSION" ]; then \
		dh_gencontrol -- -v$$DEBIAN_OVERRIDE_BINARY_VERSION; \
	else \
		dh_gencontrol ; \
	fi

%:
	echo $@
	pwd
	ls
	dh $@

